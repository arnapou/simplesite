{% extends "@internal/admin/form.twig" %}
{% import "@internal/admin/form.twig" as form %}

{% block main %}
    {{ form.breadcrumb(node) }}

    <form action="{{ node|admin_url }}" method="POST">
        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

        {{ form.notice(flash_message) }}

        <p>
            <textarea rows="40" name="source" autofocus spellcheck="false">{{ source ?: source(node)|escape }}</textarea>
        </p>

        {{ form.buttons('Save', node.parent|admin_url) }}
    </form>
{% endblock %}
