{
    "chmod": "0755",
    "main": "src/main.php",
    "output": "site/simple_site.phar",
    "compression": "GZ",
    "intercept": true,
    "directories": [
        "src",
        "templates"
    ],
    "finder": [
        {
            "name": "*.php",
            "exclude": [
                "examples",
                "demo",
                "test",
                "vendor",
                "tests",
                "Tests"
            ],
            "in": "vendor"
        }
    ],
    "shebang": false,
    "stub": true
}