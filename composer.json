{
    "name": "arnapou/simplesite",
    "description": "Project - Simple site system delivered as a standalone phar file.",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Arnaud Buathier",
            "email": "arnaud@arnapou.net",
            "homepage": "https://arnapou.net/"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev"
        }
    },
    "require": {
        "php": "~8.2.0",
        "arnapou/pfdb": "^5.0",
        "psr/simple-cache": "^3.0",
        "psr/log": "^3.0",
        "symfony/http-foundation": "^5.4",
        "symfony/routing": "^5.4",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "phpunit/php-code-coverage": "^10.0",
        "vimeo/psalm": "^5.7"
    },
    "suggest": {
        "ext-gd": "*",
        "ext-imagick": "*"
    },
    "bin": [
        "bin/simplesite.phar"
    ],
    "autoload": {
        "psr-4": {
            "Arnapou\\SimpleSite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arnapou\\SimpleSite\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform-check": false
    }
}
