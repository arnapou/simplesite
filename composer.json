{
    "name": "arnapou/simplesite",
    "description": "Project - Simple site system delivered as a standalone phar file.",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Arnaud Buathier",
            "email": "arnaud@arnapou.net",
            "homepage": "https://arnapou.net/"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-main": "6.x-dev"
        }
    },
    "require": {
        "php": "~8.3.0",
        "arnapou/pfdb": "^6.3",
        "arnapou/psr": "^2.7",
        "symfony/yaml": "^6.4",
        "twig/twig": "^3.9"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.52",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/php-code-coverage": "^11.0",
        "phpunit/phpunit": "^11.0",
        "ext-gd": "*",
        "ext-imagick": "*"
    },
    "replace": {
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php55": "*",
        "symfony/polyfill-php54": "*"
    },
    "suggest": {
        "ext-gd": "*",
        "ext-imagick": "*"
    },
    "bin": [
        "bin/simplesite.phar"
    ],
    "autoload": {
        "psr-4": {
            "Arnapou\\SimpleSite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arnapou\\SimpleSite\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    }
}
